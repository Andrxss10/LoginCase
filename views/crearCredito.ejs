<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Crear crédito</title>
  <link href="/dist/output.css" rel="stylesheet"> <!-- Tailwind build -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans">
  <div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-2xl shadow p-6">
      <h1 class="text-2xl font-bold mb-4">Crear nuevo crédito</h1>

      <% if (typeof error !== 'undefined') { %>
        <div class="bg-red-100 text-red-800 p-3 rounded mb-4"><%= error %></div>
      <% } %>

      <form action="/creditos/crear" method="post" enctype="multipart/form-data" id="formCredito" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium">Nombre del crédito *</label>
            <input name="nombre" required class="mt-1 block w-full rounded p-2 border" placeholder="Ej: Crédito vehículo" />
          </div>

          <div>
            <label class="block text-sm font-medium">Monto (COP) *</label>
            <input name="monto" required type="number" step="0.01" class="mt-1 block w-full rounded p-2 border" placeholder="0.00" />
          </div>

          <div>
            <label class="block text-sm font-medium">Tasa de interés (%)</label>
            <input name="tasa_interes" type="number" step="0.01" class="mt-1 block w-full rounded p-2 border" placeholder="Ej: 1.50" />
          </div>

          <div>
            <label class="block text-sm font-medium">Tipo de interés</label>
            <select name="tipo_interes" class="mt-1 block w-full rounded p-2 border">
              <option value="fijo">Fijo</option>
              <option value="variable">Variable</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium">Plazo (meses)</label>
            <input name="plazo_meses" type="number" class="mt-1 block w-full rounded p-2 border" />
          </div>

          <div>
            <label class="block text-sm font-medium">Cuotas</label>
            <input name="cuotas" type="number" min="1" class="mt-1 block w-full rounded p-2 border" value="1" />
          </div>

          <div>
            <label class="block text-sm font-medium">Fecha inicio *</label>
            <input name="fecha_inicio" type="date" required class="mt-1 block w-full rounded p-2 border" />
          </div>

          <div>
            <label class="block text-sm font-medium">Fecha pago (próxima) *</label>
            <input name="fecha_pago" type="date" required class="mt-1 block w-full rounded p-2 border" />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium">Notas</label>
          <textarea name="notas" rows="3" class="mt-1 block w-full rounded p-2 border"></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium">Adjuntar documento (contrato, etc.)</label>
          <input name="adjunto" type="file" class="mt-1" />
        </div>

        <!-- Sección: Recordatorios -->
        <div class="border rounded p-4 bg-gray-50">
          <h2 class="font-semibold mb-2">Recordatorios</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
            <div>
              <label class="block text-sm font-medium">Frecuencia</label>
              <select id="frecuencia" name="frecuencia" class="mt-1 block w-full rounded p-2 border">
                <option value="">No programar</option>
                <option value="una_vez">Una vez</option>
                <option value="diario">Diario</option>
                <option value="semanal">Semanal</option>
                <option value="mensual">Mensual</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium">Canal</label>
              <select name="canal" class="mt-1 block w-full rounded p-2 border">
                <option value="inapp">In‑App</option>
                <option value="email">Email</option>
                <option value="sms">SMS</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium">Hora del recordatorio</label>
              <input name="hora_recordatorio" type="time" class="mt-1 block w-full rounded p-2 border" />
            </div>
          </div>

          <div id="extraFrecuencia" class="mt-3">
            <!-- Aquí se mostrarán inputs condicionales: fecha programada, día del mes, día de la semana -->
          </div>
        </div>

        <div class="flex items-center gap-3">
          <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded">Crear crédito</button>
          <a href="/creditos" class="text-sm text-gray-600">Cancelar</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    // JS cliente para mostrar campos según frecuencia
    const frecuencia = document.getElementById('frecuencia');
    const extra = document.getElementById('extraFrecuencia');

    function renderExtra() {
      const val = frecuencia.value;
      extra.innerHTML = '';
      if (!val) return;

      if (val === 'una_vez') {
        extra.innerHTML = `
          <label class="block text-sm font-medium">Fecha del recordatorio</label>
          <input name="fecha_recordatorio" type="date" class="mt-1 block w-1/2 rounded p-2 border" />
        `;
      }

      if (val === 'semanal') {
        extra.innerHTML = `
          <label class="block text-sm font-medium">Día de la semana</label>
          <select name="dia_semana" class="mt-1 block w-1/3 rounded p-2 border">
            <option value="0">Domingo</option>
            <option value="1">Lunes</option>
            <option value="2">Martes</option>
            <option value="3">Miércoles</option>
            <option value="4">Jueves</option>
            <option value="5">Viernes</option>
            <option value="6">Sábado</option>
          </select>
        `;
      }

      if (val === 'mensual') {
        extra.innerHTML = `
          <label class="block text-sm font-medium">Día del mes</label>
          <input name="dia_mes" type="number" min="1" max="31" class="mt-1 block w-1/6 rounded p-2 border" />
        `;
      }
    }

    frecuencia.addEventListener('change', renderExtra);
    document.addEventListener('DOMContentLoaded', renderExtra);
  </script>
</body>
</html>