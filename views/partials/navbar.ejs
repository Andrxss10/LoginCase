<!DOCTYPE html><html lang="es"><head>  <meta charset="UTF-8">  <meta name="viewport" content="width=device-width, initial-scale=1.0">  <script src="https://unpkg.com/lucide@latest"></script>  <script src="https://cdn.tailwindcss.com"></script>  <style>    .dropdown-menu {      display: none;      position: absolute;      right: 0;      width: 16rem;      margin-top: 0.5rem;      background-color: rgba(255, 255, 255, 0.95);      backdrop-filter: blur(12px);      border: 1px solid rgba(209, 213, 219, 0.5);      border-radius: 0.375rem;      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);      z-index: 50;    }    .dropdown-menu.show {      display: block;    }    .dropdown-item {      display: flex;      align-items: center;      padding: 0.5rem 1rem;      cursor: pointer;      transition: background-color 0.2s;    }    .dropdown-item:hover {      background-color: rgba(236, 253, 245, 0.5);    }    .dropdown-separator {      height: 1px;      background-color: rgba(229, 231, 235, 0.5);      margin: 0.25rem 0;    }  </style></head><body><!-- views/partials/navbar.ejs --><nav class="bg-gradient-to-r from-emerald-600 via-emerald-700 to-teal-700 shadow-lg border-b border-emerald-500/20">  <div class="w-full px-4 sm:px-6 lg:px-8">    <div class="flex items-center h-20 w-full">      <!-- Logo y título - extremo izquierdo -->      <div class="flex items-center space-x-4 absolute left-4 sm:left-6 lg:left-8">        <div class="flex items-center justify-center w-12 h-12 bg-white/10 rounded-xl backdrop-blur-sm border border-white/20">          <span class="text-white font-bold text-lg">BB</span>        </div>        <div class="flex flex-col">          <h1 class="text-2xl font-bold text-white tracking-tight">BossBudget</h1>          <p class="text-emerald-100 text-sm font-medium">Tu control financiero inteligente</p>        </div>      </div>      <!-- Contenedor derecho - extremo derecho -->      <div class="ml-auto flex items-center space-x-6 absolute right-4 sm:right-6 lg:right-8">        <!-- Navegación central -->        <div class="hidden md:flex items-center space-x-1">          <a href="/principal" class="flex items-center px-3 py-2 text-white hover:bg-white/10 hover:text-white transition-colors rounded-md">            <i data-lucide="home" class="h-4 w-4 mr-2"></i>            Inicio          </a>          <a href="/dashboard" class="flex items-center px-3 py-2 text-white hover:bg-white/10 hover:text-white transition-colors rounded-md">            <i data-lucide="trending-up" class="h-4 w-4 mr-2"></i>            Dashboard          </a>        </div>        <!-- Menú de usuario con círculo perfectamente centrado -->        <div class="relative">          <button            id="user-menu-button"            class="h-12 w-12 rounded-full bg-white/10 hover:bg-white/20 border border-white/20 transition-all duration-200 focus:outline-none flex items-center justify-center p-1"            onclick="toggleUserMenu()"          >            <div class="h-10 w-10 rounded-full bg-emerald-500 flex items-center justify-center text-white font-semibold overflow-hidden">              <% if (foto) { %>                <img src="<%= foto %>" alt="Foto perfil" class="h-full w-full object-cover">              <% } else { %>                <%= name ? name.charAt(0).toUpperCase() : 'U' %>              <% } %>            </div>          </button>          <!-- Dropdown Menu -->          <div id="user-dropdown" class="hidden absolute right-0 mt-2 w-64 bg-white/95 backdrop-blur-md border border-gray-200/50 shadow-xl rounded-md py-1 z-50">            <div class="px-4 py-3 border-b border-gray-200/50">              <div class="flex items-center space-x-3">                <div class="h-12 w-12 rounded-full bg-emerald-500 flex items-center justify-center text-white font-semibold text-lg overflow-hidden">                  <% if (foto) { %>                    <img src="<%= foto %>" alt="Foto perfil" class="h-full w-full object-cover">                  <% } else { %>                    <%= name ? name.charAt(0).toUpperCase() : 'U' %>                  <% } %>                </div>                <div class="flex flex-col">                  <p class="text-sm font-semibold text-gray-900"><%= name || 'Usuario' %></p>                  <p class="text-xs text-gray-500"><%= name || 'usuario@ejemplo.com' %></p>                </div>              </div>            </div>            <div class="border-t border-gray-200/50"></div>            <a href="/principal" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-emerald-50 transition-colors">              <i data-lucide="home" class="mr-3 h-4 w-4 text-emerald-600"></i>              <span class="font-medium">Pagina Principal</span>            </a>            <a href="/crearPresupuesto" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 transition-colors">              <i data-lucide="trending-up" class="mr-3 h-4 w-4 text-blue-600"></i>              <span class="font-medium">Generar Presupuesto</span>            </a>            <a href="/generar-credito" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-purple-50 transition-colors">              <i data-lucide="credit-card" class="mr-3 h-4 w-4 text-purple-600"></i>              <span class="font-medium">Generar Credito</span>            </a>            <a href="/generar-ahorro" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-pink-50 transition-colors">              <i data-lucide="piggy-bank" class="mr-3 h-4 w-4 text-pink-600"></i>              <span class="font-medium">Generar Ahorro</span>            </a>            <div class="border-t border-gray-200/50"></div>            <a href="/cuenta" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">              <i data-lucide="user" class="mr-3 h-4 w-4 text-gray-600"></i>              <span class="font-medium">Mi Cuenta</span>            </a>            <a href="/configuracion" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">              <i data-lucide="settings" class="mr-3 h-4 w-4 text-gray-600"></i>              <span class="font-medium">Configuracion</span>            </a>						<a href="/normasIso" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors">              <i data-lucide="settings" class="mr-3 h-4 w-4 text-gray-600"></i>              <span class="font-medium">Normativa ISO</span>            </a>            <div class="border-t border-gray-200/50"></div>            <a href="/logout" class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors">              <i data-lucide="log-out" class="mr-3 h-4 w-4"></i>              <span class="font-medium">Cerrar Sesion</span>            </a>          </div>        </div>      </div>    </div>  </div></nav><script>  // Función para mostrar/ocultar el menú de usuario  function toggleUserMenu() {    const dropdown = document.getElementById('user-dropdown');    dropdown.classList.toggle('hidden');  }  // Cerrar el menú al hacer clic fuera  document.addEventListener('click', function(event) {    const dropdown = document.getElementById('user-dropdown');    const button = document.getElementById('user-menu-button');        if (!button.contains(event.target) && !dropdown.contains(event.target)) {      dropdown.classList.add('hidden');    }  });  // Inicializar iconos Lucide  document.addEventListener('DOMContentLoaded', function() {    lucide.createIcons();  });</script></body></html>